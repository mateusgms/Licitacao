<!DOCTYPE html>
<html>
<head>
    <title>Preco</title>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src = "/javascripts/menorpreco.js"></script>

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
        background-color: #eeeeee;
    }

</style>

<body>

    <select id="selectGrupo">
    </select>

    <select id="selectProduto">
    </select>

    <select id="selectRegiao">
    </select>

    <button id="novoItem">New</button>
    <form method="post" action="/precomedio/orcamento">
        <button id="orcamento">Gerar orçamento</button>
        <input style="display: none" name="codigo" id = "codInput">
        <input style="display: none" name="quantidade" id = "qtInput">
    </form>

        <div id="mydata">

            <table id="tblData" border="1" cellpadding="2">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nome Item</th>
                        <th>Data</th>
                        <th>Unidade</th>
                        <th>Região</th>
                        <th>Qtd. de preços</th>
                        <!--<th>Menor Preço</th>
                        <th>Preço Médio</th>-->
                        <th>Preço</th>
                        <th>Qtd. Compra</th>
                        <th>Valor Total</th>
                        <th>Deletar</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < carrinho.length; i++){%>
                            <tr>
                                <td id="codigo"> <%- carrinho[i].codigo %> </td>
                                <td><%- carrinho[i].nome %></td>
                                <td> <%- carrinho[i].vencimento %> </td>
                                <td><%- carrinho[i].unidade %></td>
                                <td><%- carrinho[i].regiao %></td>
                                <td> <%- carrinho[i].qtdp %> </td>
                                <td id = "preco"> <%- carrinho[i].preco %> </td>
                                <td id = 'quantidade' class ="modificaqt"><input type="number" min="0" style="width: 80px" value = '<%- carrinho[i].quantidade %>'> </td>
                                <td id ="valor"> <%- carrinho[i].preco * carrinho[i].quantidade %> </td>
                                <td><img src="images/butaodeletar.png" class = 'deletar' width="20" height="20"> </td>
                            </tr>
                    <%}%>
                </tbody>
            </table>
        </div>

</body>

</html>

